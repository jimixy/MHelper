@import './mixins.styl';
@import './variables.styl';
@import './common.styl';
@import './vant-ui.styl';

html {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    font-size: 14px;
    color: #666;
}

*, *:before, *:after {
    -webkit-box-sizing: inherit;
    -moz-box-sizing: inherit;
    box-sizing: inherit;
}

img {
    width: auto;
    height: auto;
    max-width: 100% !important;
    max-height: 100% !important;
    vertical-align: middle;
}

.container {
    padding-top: 46Px; // 使用大写的Px时，不会转成rem
    width: 100%;
    height: 100vh;
    .wrapper {
        width: 100%;
        padding: 10px;
    }

    .contain {
        height: 100%;

        .tabs1 {
            top: 46Px;
            z-index: 1000;
        }

        .tabs2 {
            height: 100%;
            overflow: scroll;
            padding-top: 88Px;
            padding-bottom: 105Px;

            .van-tabs__wrap {
                position: fixed;
                top: 90Px;
            }
        }

        .coins {
            width: 100%;
            min-height: 500px;
        }
    }
}

.primary-color {
    color: $primary-color;
}

.error-color {
    color: $error-color;
}

.danger-color {
    color: $danger-color;
}

// 修复表格样式
.vertical-border {
    border-right-width: 1Px !important;
}

.horizontal-border {
    border-bottom-width: 1Px !important;
}

.v-table-views {
    border: 1Px solid rgba(221, 221, 221, 1);
}
